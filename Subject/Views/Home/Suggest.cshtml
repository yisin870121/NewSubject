@model Subject.Models.Suggest

@{
    ViewBag.Title = "Suggest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section css{
    <style>
        input, select, textarea {
            max-width: max-content;
            border-radius: 4px;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            width: 100%;
            border:2px solid #e0e0e0;
            outline-color: #808080;
            resize: none;
        }

        #suggestTitle {
            color: #808080;
            font-size: 20px;
        }

        #right {
            font-size: 10px;
        }

        .title {
            background-color: #f8f9fa;
        }
        
    </style>

}

<div class="mt-2">
    <span class=""><a href="@Url.Action("Index")">首頁 </a></span>
    <i class="bi bi-chevron-right d-inline-flex" id="right"></i>
    <span>建議</span>
</div>

<div class="mt-2 text-center alert title">
    <span id="suggestTitle">Hi ! 想告訴我們什麼呢 <i class="bi bi-chat-dots"></i></span>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal mt-4">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center">
            @Html.TextAreaFor(model => model.Suggest1, new { htmlAttributes = new { @class = "" }, cols = "80", rows = "10", placeholder = " 請輸入內容..." })
            @Html.ValidationMessageFor(model => model.Suggest1, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group mt-4 mx-auto">
        <input type="submit" value="送出" class="btn btn-light btn-block mx-auto col-3" onclick="Success()" />
    </div>
}



@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function Success() {
            alert("謝謝您的建議，我們已收到 !");
        }

    </script>
}

