@model Subject.Models.Shop

@{
    ViewBag.Title = "Details";
    var c = "";
    var p = Model.Phone;
}



<div class="card">
    <div class="card-header">
        <input class="SID" type="hidden" value="@Model.ShopNumber" />
        <span style="font-size:25px">
            <strong class="SName">@Html.DisplayFor(model => model.ShopName)</strong>
        </span>

        <span class="ml-3"><button class="bi bi-heart-fill btn btn-danger disabled" id="addSave"> 收藏</button></span>

        @*<span class="ml-3"><button class="btn btn-danger disabled addSave"><i class="bi bi-heart-fill"></i> 收藏</button></span>*@
        <span class="ml-1"><button class="btn btn-danger disabled"><i class="bi bi-pencil-fill"></i> 評分</button></span>
    </div>
    <div class="card-body row">
        <div class="col-8">
            <div>
                @Html.DisplayNameFor(model => model.ShopAddress): <span>高雄市</span>@Html.DisplayFor(model => model.District)@Html.DisplayFor(model => model.ShopAddress)
            </div>
            <div>
                @Html.DisplayNameFor(model => model.ShopTime): @Html.DisplayFor(model => model.ShopTime)
            </div>
            <div>
                @Html.DisplayNameFor(model => model.Phone):
                @(c=Model.Phone == null? "無" : p)
            </div>
            <div>
                @Html.DisplayNameFor(model => model.Web): <a href="@Html.DisplayFor(model => model.Web)">@Html.DisplayFor(model => model.Web)</a>
            </div>
        </div>
        <div class="col-4">
            <div>
                @Html.DisplayNameFor(model => model.Outlet):
                @(c=Model.Outlet == true? "Yes":"No")
            </div>
            <div>
                @Html.DisplayNameFor(model => model.WIFI):
                @(c=Model.WIFI == true? "Yes":"No")
            </div>
            <div>
                @Html.DisplayNameFor(model => model.LimitedTime):
                @(c=Model.LimitedTime == true? "Yes":"No")
            </div>
            <div>
                @Html.DisplayNameFor(model => model.IsOrder):
                @(c=Model.IsOrder == true? "Yes":"No")
            </div>
        </div>
    </div>
</div>



<hr />
<span style="font-size:20px"><strong>付款方式</strong></span>
@Html.ActionLink("新增", "UserCreatePay", new { ShopNumber = ViewBag.ShopNumber })
<div>
    @Html.Action("_PayDetail")
</div>

