@model IEnumerable<Subject.Models.ShopImage>

@{
    ViewBag.Title = "Index";
}

@section css{
    <style>
        #AddImage {
            display: none;
        }
    </style>
}

<h2>照片管理</h2>

<p class="text-right">
    <button class="btn btn-primary" id="AddForm">新增照片</button>
</p>
<div class="alert alert-primary" id="AddImage">
    @Html.Action("_Create")
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shop.ShopName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShopImage1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageDate)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Users.UserAccount)
            </th>*@
        <th>
            管理
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shop.ShopName)
            </td>
            <td>
                @*@item.ShopImage1*@
                <img src="@Url.Action("GetPhoto", new {id=item.ImageNumber})" width="100" />
                @*@Html.DisplayFor(modelItem => item.ShopImage1)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageDate)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Users.UserAccount)
                </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ImageNumber }) |
                @Html.ActionLink("Details", "Details", new { id = item.ImageNumber }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ImageNumber })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $('#AddForm').click(function () {
            $('#AddImage').fadeToggle(800);
        });

        //function getEditData(evt) {
