@model Subject.Models.Pay

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create","Pays",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal mt-3 row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-9">
        <div class="form-group">
            @*@Html.LabelFor(model => model.PayType, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.EditorFor(model => model.PayType, new { htmlAttributes = new { @class = "form-control", placeholder = " 請輸入付款方式" } })
            @Html.ValidationMessageFor(model => model.PayType, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <input type="submit" value="新增" class="btn btn-light" />
        </div>
    </div>
</div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
