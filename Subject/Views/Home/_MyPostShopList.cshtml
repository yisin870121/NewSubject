@model IEnumerable<Subject.Models.PostShop>

@{
    ViewBag.Title = "_MyPostShopList";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center alert profile"><i class="bi bi-shop"></i> 我的投稿</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostName)
        </th>
        <th>
            詳細資料
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostName)
            </td>
            <td>
                <button type="button" id="@item.PostNumber" class="btn btn-primary disabled mt-2 w-75 mx-auto" data-toggle="modal" data-target="#showDetailModal" onclick="getDetailData(event)" title="詳細資料">
                    <i class="bi bi-journal-text" id="@item.PostNumber"></i>
                </button>
            </td>
        </tr>

    }

</table>


<div class="modal fade" id="showDetailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-dark mt-2 ml-2"><h5>我的投稿店家</h5></div>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    function getDetailData(evt) {
        $('#showDetailModal .modal-body').load("/Home/_MyPostShopDetail/" + evt.target.id);
    }
</script>
