    //    }
    //}

    var t = document.getElementById("addSave");

    var save = [];

    if (localStorage.getItem("save")) {
        save = JSON.parse(localStorage.getItem("save"));
    }

    $('#addSave').click(function () {
        let shop = $(this).closest('.card');
        let newSID = shop.find('.SID').val();

        let foundItem = save.find(item => item.SID == newSID);
        if (foundItem === undefined) {
            setSave(shop);
        }
        else {
            removeSave();
        }
        console.log(save);
        localStorage.setItem("save", JSON.stringify(save));

    })

    function setSave(shop) {
        let newItem = {
            SID: shop.find('.SID').val(),
            SName: shop.find('.SName').text()
        }
        save.push(newItem);
        if (t.innerText == " 收藏") {
            t.innerText = " 取消收藏";
        }
        alert("已加入收藏");
    }

    function removeSave() {
        save.splice(save.length-1, 1);
        if (t.innerText == " 取消收藏") {
            t.innerText = " 收藏";
        }
        alert("已取消收藏");
    }

    



</script>



