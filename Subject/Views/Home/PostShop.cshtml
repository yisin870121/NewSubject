                        @Html.EditorFor(model => model.PostLimitedTime)
                        @Html.ValidationMessageFor(model => model.PostLimitedTime, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PostOrder, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.PostOrder)
                        @Html.ValidationMessageFor(model => model.PostOrder, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="form-group col-12 text-right">
            <span class="btn btn-link">@Html.ActionLink("回上一頁", "Index")</span>
            <input type="submit" value="送出" class="btn btn-light" onclick="Success()" />
        </div>
    </div>
}



<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@section scripts{
