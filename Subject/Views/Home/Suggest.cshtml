@model Subject.Models.Suggest

@{
    ViewBag.Title = "Suggest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section css{
    <style>
        /*input, select, textarea {
            max-width:max-content;
        }*/

        input, select, textarea {
            max-width: max-content;
        }

    </style>
    
    }

<h2 class="mt-3">建議內容</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Suggest1, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*<textarea id="Suggest1" rows="20" cols="100" class="form-control"></textarea>*@
            @Html.TextAreaFor(model => model.Suggest1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Suggest1, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group mt-3">
        @*<div class="form-group col-12 text-right">*@
        <span class="btn btn-link">@Html.ActionLink("回上一頁", "Index")</span>
        <input type="submit" value="送出" class="btn btn-light" onclick="Success()" />
            @*</div>*@
    </div>
</div>
    
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@section scripts{
    <script>
        function Success() {
            alert("謝謝您的投搞 ! 將經管理員審核，敬請期待");
        }

    </script>
}

