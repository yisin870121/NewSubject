@model Subject.Models.ShopImage

@{
    ViewBag.Title = "Delete";
}

<div>
    <dl class="dl-horizontal">
        <dd>
            @Html.DisplayFor(model => model.Shop.ShopName)
        </dd>
        <dd>
            <img src="@Url.Action("GetPhoto", new {id=Model.ImageNumber})" class="w-100" />
        </dd>
    </dl>

    @using (Html.BeginForm("_Delete", "ShopImages", FormMethod.Post)) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-right">
            <input type="submit" value="刪除" class="btn btn-danger" />
        </div>
    }
</div>
