<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mystyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    @RenderSection("css", false)
</head>
@*fixed-top*@
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-warning">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("跑咖Cafe'", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <i class="bi bi-cup-fill text-black-50" style="font-size:20px"></i>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainMenu" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse ml-3" id="mainMenu">
                <ul class="navbar-nav mr-auto w-100 mt-1">
                    <li class="nav-item">
                        @Html.ActionLink("咖啡廳清單", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("新增店家", "PostShop", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("建議", "Suggest", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <form class="form-inline my-2 my-lg-0" action="https://www.google.com/search">
                            <input class="form-control mr-sm-2" name="q" type="search" placeholder="搜尋咖啡廳" aria-label="Search">
                            <button class="btn btn-light my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </li>
                    @if (Session["user"] == null)
                    {
                        <li class="nav-item ml-auto">
                            @Html.ActionLink("登入", "Login", "Home", new { area = "" }, new { @class = "nav-link btn btn-light text-dark" })
                        </li>
                        <li class="nav-item ml-1">
                            @Html.ActionLink("註冊", "SignUp", "Home", new { area = "" }, new { @class = "nav-link btn btn-light text-dark" })
                        </li>
                    }
                    @if (Session["user"] != null)
                    {
                        <li class="dropdown ml-auto">
                            <button class="btn btn-light dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                會員中心
                            </button>
                            <div class="dropdown-menu">
                                @Html.ActionLink("主頁", "UserIndex", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                @*@Html.ActionLink("使用者頁面", "Index", "Home", new { area = "" }, new { @class = "dropdown-item" })*@
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("登出", "Logout", "Home", new { area = "" }, new { @class = "dropdown-item " })
                            </div>
                        </li>
                        @*<li class="nav-item ml-auto">
                @Html.ActionLink("會員中心", "UserIndex", "Home", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item ml-3">
                @Html.ActionLink("登出", "Logout", "Home", new { area = "" }, new { @class = "nav-link btn btn-light text-dark" })
            </li>*@
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Cafe'</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>